<form action="/recipes/<%= @recipe.id %>" method="post">
<label for="name">Recipe Name</label><br />
<input type="text" id="name" name="name" value="<%= @recipe.name %>"> <br />
<label for="content">Ingredients</label><br />
<input type="text" id="ingredients" name="ingredients" value="<%= @recipe.ingredients %>"><br />
<label for="content">Cook Time</label><br />
<input type="text" id="cook_time" name="cook_time" value="<%= @recipe.cook_time %>"><br />
<input type="submit" value="Submit Recipe">
<% if @recipe.id %>
<input id="hidden" type="hidden" name="_method" value="PATCH">
<% end %>
</form>