<form action="/recipes/<%= @recipe.id %>" method="post">
    <label for="name">Name</label><br/>
    <input type="text" name="name" value="<%= @recipe.name %>" ><br/><br/>

    <label for="ingredients">Ingredients</label><br/>
    <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"><br/><br/>

    <label for="cook_time">Cooking Time</label><br/>
    <input type="text" name="cook_time" value="<%= @recipe.cook_time %>"><br/><br/>
    <input type="submit" id="Submit" value="Save Recipe">

    <% if @recipe.id %>
        <input type="hidden" name="_method" value="patch">
    <% end %>
</form>